@model IEnumerable<MVCErick.Models.EmpresaModels>

@{
    ViewBag.Title = "Index";
}

<h2>Empresas</h2>

<p>

<p typeof="button" class="btn btn-light border-dark"> @Html.ActionLink("Criar", "Create")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeEmpresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoEmpresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnderecoEmpresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCriacao)
        </th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>

            <td class="row col-md-4 ml-2 mb-1">
                <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-warning">Editar</a>
            </td>
        </tr>
    }

</table>
